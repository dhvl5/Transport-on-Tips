<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Forgot Password !"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textColor="#000000"
        android:id="@+id/fg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="OTP will be sent to this email"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/lbl"
        android:layout_below="@+id/fg"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/raleway_bold"
        android:background="@drawable/custom_et1"
        android:hint="Email"
        android:id="@+id/forgotEditText"
        android:layout_below="@+id/lbl"
        />



    <Button
        android:id="@+id/skipBtn"
        android:onClick="Send"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Send"
        android:background="@drawable/custom_btn1"
        android:textColor="#ffffff"
        android:fontFamily="@font/raleway_bold"
        android:layout_below="@+id/forgotEditText"
        />



</RelativeLayout>