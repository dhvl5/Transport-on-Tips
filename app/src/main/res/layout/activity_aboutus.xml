<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Transport On Tips ? "
        android:textSize="20sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/tv1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport On Tips is an application to provide solution for problems occuring in day to day life while travelling to BRTS.It provides Features like Digital pass, Digital ticket booking, Checking route of the buses etc.\n\nThis is the base version of the Application, Some of the modules are still under Process. they will be provided in upcoming version."
        android:textSize="15sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/tv1"/>

</RelativeLayout>