<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Createacc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Create an account"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edtFullname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170sp"
        android:background="@drawable/custom_et1"
        android:fontFamily="@font/raleway_bold"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235sp"
        android:background="@drawable/custom_et1"
        android:fontFamily="@font/raleway_bold"
        android:hint="Email" />

    <TextView
        android:id="@+id/edtCode"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/custom_et1"
        android:fontFamily="@font/raleway_bold"
        android:hint="+91"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtMobileNumber"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/custom_et1"
        android:fontFamily="@font/raleway_bold"
        android:hint="Phone Number" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="425dp"
        android:background="@drawable/custom_et1"
        android:fontFamily="@font/raleway_bold"
        android:inputType="textPassword"
        android:hint="Password" />

    <Spinner
        android:id="@+id/edtGender"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:entries="@array/gender"
        android:layout_marginTop="500dp"
        android:background="@drawable/spinner"
        android:fontFamily="@font/raleway_bold" />

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:background="@drawable/custom_btn1"
        android:fontFamily="@font/raleway_bold"
        android:onClick="SkipButton"
        android:text="SKIP"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/nxtBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="625dp"
        android:background="@drawable/custom_btn1"
        android:fontFamily="@font/raleway_bold"
        android:text="NEXT"
        android:textColor="#ffffff" />




</RelativeLayout>