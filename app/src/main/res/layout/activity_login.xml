<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Transport On Tips"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:layout_marginLeft="80dp" />

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210sp"
        android:fontFamily="@font/raleway_bold"
        android:background="@drawable/custom_et1"
        android:hint="Email" />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300sp"
        android:fontFamily="@font/raleway_bold"
        android:background="@drawable/custom_et1"
        android:hint="Password"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:layout_below="@+id/passwordLogin"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/passwordLogin"
        android:fontFamily="@font/raleway_bold"
        android:textSize="16sp"
        android:onClick="forgot"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="LOG IN"
        android:background="@drawable/custom_btn1"
        android:textColor="#ffffff"
        android:fontFamily="@font/raleway_bold"
        android:onClick="login"
        />
    <Button
        android:id="@+id/skipBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:background="@drawable/custom_btn1"
        android:fontFamily="@font/raleway_bold"
        android:onClick="SkipButton"
        android:text="SKIP"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:fontFamily="@font/raleway_bold"
        android:onClick="show"
        android:text="Not Registered Yet?SIGN UP"
        android:textColor="#000000"
        android:textSize="16sp" />
    <View
        android:layout_width="280dp"
        android:layout_height="4dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="680dp"
        android:background="#000000" />


</RelativeLayout>